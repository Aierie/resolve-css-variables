{
  "name": "resolve-css-variables",
  "version": "0.1.2",
  "description": "Package to resolve css variables given strings containing declarations.",
  "main": "dist/index.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "yarn tsc",
    "proto": "yarn build && node dist/index.js",
    "test": "yarn build && ava src/test.ts",
    "test:watch": "nodemon --exec 'yarn test' ./src/*"
  },
  "author": "Aierie",
  "license": "ISC",
  "dependencies": {
    "@types/css": "^0.0.31",
    "css": "^3.0.0",
    "reduce-css-calc": "^2.1.8"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "ava": "^3.15.0",
    "@types/node": "^15.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "dist/*"
    ]
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  }
}
